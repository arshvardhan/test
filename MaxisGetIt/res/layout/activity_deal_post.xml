<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/adp_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_base_col"
    android:orientation="vertical" >

    <include
        android:id="@+id/header_base_activity"
        layout="@layout/header_without_search" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_base_activity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:weightSum="1" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/home_list_bar" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="10dp"
                    android:text="Post Deal"
                    android:textColor="@color/maxis_green"
                    android:textSize="@dimen/sp_17"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/enter_basic_detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/deal_title"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/adp_title_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:background="@drawable/text_field"
                        android:inputType="textPersonName"
                        android:maxLength="30"
                        android:padding="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>
                <!-- android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ " -->

                <LinearLayout
                    android:id="@+id/adp_comp_chooser_spinner_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/choose_company"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <LinearLayout
                        android:id="@+id/adp_company_chosser_txt_box_vg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".58"
                        android:orientation="vertical" >

                        <Spinner
                            android:id="@+id/adp_company_chooser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dropdown_box"
                            android:paddingBottom="5dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="13dp"
                            android:paddingTop="5dp"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />

                        <!--
                             <TextView
                            android:id="@+id/adp_company_name_txt_v"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13"
                            android:visibility="gone" />
                        -->
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adp_category_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/choose_category"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <Spinner
                        android:id="@+id/adp_category_chooser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:background="@drawable/dropdown_box"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="13dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="City"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <Spinner
                        android:id="@+id/adp_city_chooser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:background="@drawable/dropdown_box"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="13dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locality_chooser_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="Locality"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <Spinner
                        android:id="@+id/adp_locality_chooser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:background="@drawable/dropdown_box"
                        android:paddingBottom="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="13dp"
                        android:paddingTop="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/deal_desc"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <EditText
                        android:id="@+id/adp_desc_txt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:background="@drawable/text_field"
                        android:minLines="2"
                        android:padding="5dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/enter_redemption_detail"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/end_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <TextView
                        android:id="@+id/adp_enddate_btn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".58"
                        android:background="@drawable/text_field"
                        android:clickable="true"
                        android:padding="5dp"
                        android:text="@string/date_format"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".42"
                        android:padding="5dp"
                        android:text="@string/voucher_applicable"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_13" />

                    <RadioGroup
                        android:id="@+id/adp_voucher_applicable_RG"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".58"
                        android:orientation="horizontal" >

                        <RadioButton
                            android:id="@+id/adp_voucher_applicable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="@string/yes" />

                        <RadioButton
                            android:id="@+id/adp_voucher_not_applicable"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/no" />
                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/adp_voucher_detail_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".42"
                            android:padding="5dp"
                            android:text="@string/count_of_voucher"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />

                        <EditText
                            android:id="@+id/adp_count_voucher"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".58"
                            android:background="@drawable/text_field"
                            android:digits="1234567890"
                            android:inputType="number"
                            android:maxLength="15"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".42"
                            android:padding="5dp"
                            android:text="@string/voucher_redeem_date"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />

                        <TextView
                            android:id="@+id/adp_voucher_redeem_dt_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".58"
                            android:background="@drawable/text_field"
                            android:clickable="true"
                            android:padding="5dp"
                            android:text="@string/date_format"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:weightSum="1" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".42"
                            android:padding="5dp"
                            android:text="@string/voucher_redeem_price"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />

                        <EditText
                            android:id="@+id/adp_voucher_redeem_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight=".58"
                            android:background="@drawable/text_field"
                            android:inputType="numberDecimal"
                            android:maxLength="20"
                            android:padding="5dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_13" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/adp_deal_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:src="@drawable/upload_photo_icon" />

                        <ImageView
                            android:id="@+id/adp_deal_image_cross"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/cat_thumb_cross" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/adp_deal_image2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:src="@drawable/upload_photo_icon" />

                        <ImageView
                            android:id="@+id/adp_deal_image_cross2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/cat_thumb_cross" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/adp_deal_image3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="true"
                            android:src="@drawable/upload_photo_icon" />

                        <ImageView
                            android:id="@+id/adp_deal_image_cross3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/cat_thumb_cross" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/adp_deal_image4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:src="@drawable/upload_photo_icon" />

                        <ImageView
                            android:id="@+id/adp_deal_image_cross4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:clickable="true"
                            android:src="@drawable/cat_thumb_cross" />
                    </FrameLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/adp_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/shape_green_curved_box"
                    android:clickable="true"
                    android:text="@string/submit"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>