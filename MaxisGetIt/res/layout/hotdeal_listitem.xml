<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hotdeal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingBottom="5dp" >

    <LinearLayout
        android:id="@+id/deal_row_base_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_home_list_item_bg"
        android:padding="2dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/deal_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="left"
            android:padding="5dp"
            android:singleLine="true"
            android:text="sdfsdfdsfs"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deal_title"
            android:orientation="horizontal"
            android:weightSum="1" >

            <ImageView
                android:id="@+id/deals_image"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_weight=".30"
                android:background="@drawable/upload_photo_icon_bg"
                android:padding="3dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".65"
                android:paddingLeft="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/validity_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingLeft="3dp"
                    android:text="sdfsdfdsfs"
                    android:textColor="@color/black_light"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/validity_expires"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="3dp"
                    android:text="sdfsdfdsfs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12" />

                <Button
                    android:id="@+id/download_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/getinfo_btn"
                    android:visibility="gone" />
            </LinearLayout>
            
            <ImageView
            android:id="@+id/arrow"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight=".05"
         	android:paddingLeft="2dp"
         	android:paddingRight="2dp"
            android:layout_centerVertical="true"
            android:src="@drawable/arrow" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>