<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="customFeedbackRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/feedback_rating_bar_selector</item>
        <item name="android:minHeight">14dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="customFeedbackLargeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/feedback_large_rating_bar_selector</item>
        <!--
        <item name="android:minHeight">wrap_content</item>
        <item name="android:maxHeight">wrap_content</item>
        -->
    </style>

    <style name="Theme.Almost_full_transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/almost_full_transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.SemiTransparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!-- <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> -->
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:colorForeground">#fff</item>
    </style>

    <!-- android:TextAppearance.Widget.TextView.SpinnerItem -->
    <!-- @android:style/Widget.TextView.SpinnerItem -->
    <style name="SpinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Rmytheme" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="common_green_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_green_curved_box</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_light_green_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/shape_light_green_curved_box</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="common_red_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/red_curved_box_with_less_pad</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textStyleNormal">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyleBold">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Dialog2" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent2</item>
    </style>

    <!-- style for header beta version -->
    <style name="common_style_for_beta_version_header">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/common_bg_color_for_beta_version</item>
        <item name="android:textColor">@color/common_text_color_yellow</item>
        <item name="android:text">@string/common_header_text_beta_version</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

</resources>