<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include
        android:id="@+id/header_base_activity"
        layout="@layout/header_with_popdown_search" />
    <RelativeLayout
        android:id="@+id/compass_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_base_activity"
        android:background="@color/header_bg_color"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >
        <TextView
            android:id="@+id/compass_comp_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="jfhdkhkkggk"
            android:textColor="@color/title_dark_grey"
            android:textSize="@dimen/sp_15"
            android:layout_toLeftOf="@+id/compass_rating_comp" 
            android:layout_alignParentLeft="true"/>
        <TextView
            android:id="@+id/compass_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/compass_comp_name"
            android:ellipsize="end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="jjlkjljljljkjlk"
            android:textColor="@color/text_light_grey"
            android:textSize="@dimen/sp_12" />
        
        <TextView
            android:id="@+id/compass_rated_user_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="( 45 )"
            android:textSize="@dimen/sp_10"
            android:layout_marginLeft="5dp"/>
        <RatingBar
            android:id="@+id/compass_rating_comp"
            style="@style/customFeedbackRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/compass_rated_user_count"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize=".5" />
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/footer_compass_screen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/header_bg_color"
        android:gravity="center" >
        <TextView
            android:id="@+id/txv_icon_show_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/map_logo_small"
            android:drawablePadding="5dp"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Map"
            android:textSize="@dimen/sp_17" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/compass_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/footer_compass_screen"
        android:layout_below="@id/compass_title"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:weightSum="1" >
        <!--
         <TextView 
	    android:paddingTop="10dp"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="This functionality is for illustrative purpose"
	    android:gravity="center_horizontal"/>       -->
