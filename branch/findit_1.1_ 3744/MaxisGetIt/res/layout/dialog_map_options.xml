<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="@string/dialog_header"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_middle" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
            android:id="@+id/dialog_map_driving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_negative"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/map_driving_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" 
            android:layout_marginTop="10dp"/>
            
            <Button
            android:id="@+id/dialog_map_walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_negative"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/map_walking_mode"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" 
            android:layout_marginTop="10dp"/>
           <Button
            android:id="@+id/dialog_map_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_negative"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/map_comp_details"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" 
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:layout_marginTop="10dp"/>
           
           <Button
            android:id="@+id/dialog_map_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_dialog_negative"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" 
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        </LinearLayout>
        
    </ScrollView>
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom"
        android:layout_gravity="center_vertical" ></RelativeLayout>

</LinearLayout>