<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/mi_bg_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/map_popup" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/mi_bg_image"
        android:layout_alignBottom="@id/mi_bg_image"
        android:layout_alignTop="@id/mi_bg_image"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp" >
    <ImageView
        android:id="@+id/mi_comp_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:background="@drawable/map_image"
        android:scaleType="fitXY" 
        android:layout_marginLeft="15dp"/>
    <TextView
        android:id="@+id/mi_comp_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/mi_comp_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" 
        />
    <TextView
        android:id="@+id/mi_comp_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mi_comp_title"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/mi_comp_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp_12" 
        />
    <TextView
        android:id="@+id/mi_comp_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mi_comp_location"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/mi_comp_image"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/sp_12" 
        />
    <TextView
        android:id="@+id/mi_comp_distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/mi_comp_title"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:singleLine="true"
        android:textSize="@dimen/sp_12" 
        />
    </RelativeLayout>
</RelativeLayout>